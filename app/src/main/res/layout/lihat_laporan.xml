<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/exit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textStyle="bold"
            android:textSize="26dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>

    <!-- include your activity_main.xml here  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="65dp">
        <ImageView
                android:id="@+id/gambar_lihat_dokumen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kicon"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/nama_lihat_laporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nama"/>
                <TextView
                    android:id="@+id/judul_lihat_laporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="judul laporan"/>
                <TextView
                    android:id="@+id/tanggal_lihat_laporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tanggal"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan :"
                android:layout_marginTop="20dp"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="@string/app_name"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/btnGetMoreResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_light_background"
            android:gravity="center"
            android:padding="10dp">
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black"
                android:padding="6dp"
                android:text="Download"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>